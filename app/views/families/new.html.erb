<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Family create</h1>

        <%= form_for @family do |f| %>

          <div class="field">
            <%= f.label :family_name %><br />
            <%= f.text_field :family_name, autofocus: true %>
          </div>

          <% if logged_in? %>
            <div class="actions">
              <%= f.submit "Familyを作成" %>
            </div>
          <% end %>

        <% end %>

      </div>
    </div>
  </div>
</div>
